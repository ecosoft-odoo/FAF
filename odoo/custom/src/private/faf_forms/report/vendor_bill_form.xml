<odoo>
    <!--Copyright 2021 Ecosoft Co., Ltd (http://ecosoft.co.th)-->
    <template id="report_vendor_bill_document">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <div class="article faf_vendor_bill">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <t t-set="company" t-value="doc.company_id" />
                        <div class="col-2">
                            <img
                                t-if="company.logo"
                                t-att-src="image_data_uri(company.logo)"
                                class="logo"
                                alt="Logo"
                            />
                        </div>
                        <div class="col-7">
                            <span style="font-size: 12pt;" t-field="company.name" /><br
                            />
                            <span
                                t-esc="', '.join(list(filter(lambda l: l, [company.street, company.street2, company.city, company.country_id.name, company.zip])))"
                            /><br />
                            <span t-esc="'Tax ID : %s' % company.vat" />
                        </div>
                        <div class="col-3" style="padding-right: 0px;">
                            <span
                                t-esc="'Branch : %s' % (company.branch == '0000' and 'Head Office' or company.branch)"
                            /><br />
                            <span t-esc="'Tel : %s' % company.phone" /><br />
                            <span t-esc="'Email : %s' % company.email" />
                        </div>
                    </div>
                </div>
            </div>
            <div style="page-break-inside: avoid;margin-top: 30px;">
                <div class="row">
                    <div class="col-2">
                        Invoice Date :
                    </div>
                    <div class="col-4">
                        <span t-field="doc.invoice_date" />
                    </div>
                    <div class="col-3">
                        Vendor Bill :
                    </div>
                    <div class="col-3">
                        <span t-field="doc.name" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        Vendor :
                    </div>
                    <div class="col-10">
                        <span t-field="doc.partner_id.name" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        Address :
                    </div>
                    <div class="col-10">
                        <span t-field="doc.partner_id.street" />
                        <span t-field="doc.partner_id.street2" />
                        <span t-field="doc.partner_id.city" />
                        <span t-field="doc.partner_id.state_id.name" />
                        <span t-field="doc.partner_id.zip" />
                        <span t-field="doc.partner_id.country_id.name" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        Tax ID :
                    </div>
                    <div class="col-10">
                        <span t-field="doc.partner_id.vat" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        Reference :
                    </div>
                    <div class="col-10">
                        <span t-field="doc.ref" />
                    </div>
                </div>
                <table class="table table-sm o_main_table" style="margin-top: 30px;">
                    <thead>
                        <tr>
                            <th class="text-center">Account</th>
                            <th class="text-center">Analytic Account</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Taxes</th>
                            <th class="text-center">WHT</th>
                            <th class="text-center">Amount Paid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="current_total" t-value="0" />
                        <t
                            t-set="lines"
                            t-value="doc.invoice_line_ids.sorted('sequence')"
                        />
                        <t t-foreach="lines" t-as="line">
                            <t
                                t-set="current_total"
                                t-value="current_total + line.price_total"
                            />
                            <tr
                                t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                            >
                                <t t-if="not line.display_type">
                                    <td>
                                        <span t-field="line.account_id.code" />
                                    </td>
                                    <td>
                                        <span t-field="line.analytic_account_id.name" />
                                    </td>
                                    <td>
                                        <span t-field="line.name" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_subtotal" />
                                    </td>
                                    <td>
                                        <span
                                            t-esc="', '.join(line.tax_ids.mapped('name'))"
                                        />
                                    </td>
                                    <td>
                                        <span t-field="line.wt_tax_id.name" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_total" />
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span
                                            t-field="line.name"
                                            t-options="{'widget': 'text'}"
                                        />
                                    </td>
                                    <t t-set="current_section" t-value="line" />
                                    <t t-set="current_total" t-value="0" />
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span
                                            t-field="line.name"
                                            t-options="{'widget': 'text'}"
                                        />
                                    </td>
                                </t>
                            </tr>
                            <t
                                t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')"
                            >
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_total"
                                            t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
                <div class="clearfix">
                    <div class="row">
                        <div class="col-6 ml-auto">
                            <table
                                class="table table-sm"
                                style="page-break-inside: avoid;"
                            >
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span
                                            class="text-nowrap"
                                            t-field="doc.amount_total"
                                        />
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>WHT</strong></td>
                                    <td class="text-right">
                                        <t
                                            t-set="amount_wt"
                                            t-value="sum(doc.line_ids.filtered('wt_tax_id').mapped(lambda l: l.wt_tax_id.amount / 100 * l.amount_currency))"
                                        />
                                        <span
                                            class="text-nowrap"
                                            t-esc="-1 * abs(amount_wt)"
                                            t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"
                                        />
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td><strong>Payment Amount</strong></td>
                                    <td class="text-right">
                                        <span
                                            class="text-nowrap"
                                            t-esc="doc.amount_total - amount_wt"
                                            t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"
                                        />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="text-center row">
                <div class="col-3">
                    <div style="border-top: 1px solid black;">
                        <br />
                        ชื่อผู้จัดทำ (Creator)<br /><br />
                        ________/________/________
                    </div>
                </div>
                <div class="col-3">
                    <div style="border-top: 1px solid black;">
                        <br />
                        ชื่อผู้ตรวจสอบ (Audit By)<br /><br />
                        ________/________/________
                    </div>
                </div>
                <div class="col-3">
                    <div style="border-top: 1px solid black;">
                        <br />
                        ชื่อผู้อนุมัติ / Approved By<br /><br />
                        ________/________/________
                    </div>
                </div>
                <div class="col-3">
                    <div style="border-top: 1px solid black;">
                        <br />
                        ชื่อผู้รับ (Receiver Name)<br /><br />
                        ________/________/________
                    </div>
                </div>
            </div>
        </div>
    </template>
    <template id="report_vendor_bill">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t
                    t-call="faf_forms.report_vendor_bill_document"
                    t-lang="doc.partner_id.lang"
                />
            </t>
        </t>
    </template>
</odoo>
