<odoo>
    <!--Copyright 2021 Ecosoft Co., Ltd (http://ecosoft.co.th)-->
    <template id="report_invoice_document">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <div class="article faf_invoice">
            <div class="row">
                <div class="col-12">
                    <t t-set="company" t-value="doc.company_id" />
                    <img
                        t-if="company.logo"
                        t-att-src="image_data_uri(company.logo)"
                        class="logo"
                        alt="Logo"
                    />
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-right title">
                    <strong style="font-size: 22pt;">INVOICE</strong>
                </div>
            </div>
            <!-- Customer Details -->
            <div style="page-break-inside: avoid;">
                <div class="row">
                    <div
                        class="col-7 detail white-border no-left-border no-bottom-border"
                    />
                    <div class="col-2 text-right detail white-border">
                        No.:
                    </div>
                    <div class="col-3 detail white-border no-right-border">
                        <span t-field="doc.name" />
                    </div>
                </div>
                <div class="row">
                    <div
                        class="col-7 detail white-border no-left-border no-top-border"
                    />
                    <div class="col-2 text-right detail white-border">
                        Date:
                    </div>
                    <div class="col-3 detail white-border no-right-border">
                        <span t-field="doc.invoice_date" />
                    </div>
                </div>
                <div class="row">
                    <div
                        class="col-7 detail white-border no-left-border no-bottom-border"
                    />
                    <div class="col-2 text-right detail white-border">
                        Due Date:
                    </div>
                    <div class="col-3 detail white-border no-right-border">
                        <span t-field="doc.invoice_date_due" />
                    </div>
                </div>
                <div class="row">
                    <div
                        class="col-7 detail white-border no-left-border no-top-border no-bottom-border"
                    />
                    <div class="col-2 text-right detail white-border">
                        Sale Order No.:
                    </div>
                    <div class="col-3 detail white-border no-right-border">
                        <span
                            t-esc="', '.join(doc.invoice_line_ids.sale_line_ids.order_id.mapped('name'))"
                        />
                    </div>
                </div>
                <div class="row">
                    <div
                        class="col-7 detail white-border no-left-border no-top-border"
                    />
                    <div class="col-2 text-right detail white-border">
                        Sale Consultant:
                    </div>
                    <div class="col-3 detail white-border no-right-border">
                        <span t-field="doc.salesperson_id.name" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-2 text-right detail white-border no-left-border">
                        Customer:
                    </div>
                    <div class="col-5 detail white-border">
                        <span t-field="doc.partner_id.name" /><br />
                        <span t-field="doc.partner_id.street" />
                        <span t-field="doc.partner_id.street2" />
                        <span t-field="doc.partner_id.city" />
                        <span t-field="doc.partner_id.state_id.name" />
                        <span t-field="doc.partner_id.zip" />
                        <span t-field="doc.partner_id.country_id.name" />
                    </div>
                    <div class="col-2 detail white-border text-right">
                        Tel:<br />Email:
                    </div>
                    <div class="col-3 detail white-border no-right-border">
                        <span t-field="doc.partner_id.phone" /><br />
                        <span t-field="doc.partner_id.email" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-2 text-right detail white-border no-left-border">
                        Tax ID:
                    </div>
                    <div class="col-5 detail white-border">
                        <span t-field="doc.partner_id.vat" />
                    </div>
                    <div class="col-2 detail white-border" />
                    <div class="col-3 detail white-border no-right-border" />
                </div>
            </div>
            <!-- Invoice Lines -->
            <div style="margin-top: 30px;">
                <div class="row">
                    <div class="col-12" style="padding: 0px;">
                        <table class="table table-sm table-borderless mt8">
                            <thead>
                                <tr>
                                    <th
                                        class="text-center no-left-border"
                                        style="width: 5%;"
                                    >No.</th>
                                    <th
                                        class="text-center"
                                        style="width: 59%;"
                                    >Description</th>
                                    <th
                                        class="text-center"
                                        style="width: 12%;"
                                    >Amount<br /><i>NON-VAT</i></th>
                                    <th
                                        class="text-center"
                                        style="width: 12%;"
                                    >Amount<br /><i>VAT</i></th>
                                    <th
                                        class="text-center no-right-border"
                                        style="width: 12%;"
                                    >Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="current_subtotal_non_vat" t-value="0" />
                                <t t-set="current_subtotal_vat" t-value="0" />
                                <t t-set="current_subtotal" t-value="0" />
                                <t t-set="subtotal_non_vat" t-value="0" />
                                <t t-set="subtotal_vat" t-value="0" />
                                <t t-set="subtotal" t-value="0" />
                                <t t-set="number" t-value="0" />
                                <t
                                    t-foreach="doc.invoice_line_ids.sorted('sequence')"
                                    t-as="line"
                                >
                                    <t
                                        t-set="amount"
                                        t-value="line.quantity * line.price_unit"
                                    />
                                    <t
                                        t-set="current_subtotal"
                                        t-value="current_subtotal + amount"
                                    />
                                    <t t-set="subtotal" t-value="subtotal + amount" />
                                    <tr
                                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                        style="border-bottom: 1px solid lightgray;"
                                    >
                                        <t t-if="not line.display_type">
                                            <td class="text-center">
                                                <t
                                                    t-set="number"
                                                    t-value="number + 1"
                                                />
                                                <span t-esc="number" />
                                            </td>
                                            <td>
                                                <span t-field="line.name" />
                                            </td>
                                            <td class="text-right">
                                                <t
                                                    t-if="not line.tax_ids or not line.tax_ids.filtered(lambda l: l.amount)"
                                                >
                                                    <span
                                                        t-esc="'{0:,.2f}'.format(amount)"
                                                    />
                                                    <t
                                                        t-set="current_subtotal_non_vat"
                                                        t-value="current_subtotal_non_vat + amount"
                                                    />
                                                    <t
                                                        t-set="subtotal_non_vat"
                                                        t-value="subtotal_non_vat + amount"
                                                    />
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <t
                                                    t-if="line.tax_ids and line.tax_ids.filtered(lambda l: l.amount)"
                                                >
                                                    <span
                                                        t-esc="'{0:,.2f}'.format(amount)"
                                                    />
                                                    <t
                                                        t-set="current_subtotal_vat"
                                                        t-value="current_subtotal_vat + amount"
                                                    />
                                                    <t
                                                        t-set="subtotal_vat"
                                                        t-value="subtotal_vat + amount"
                                                    />
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <span
                                                    t-esc="'{0:,.2f}'.format(amount)"
                                                />
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99">
                                                <span t-field="line.name" />
                                            </td>
                                            <t t-set="current_subtotal" t-value="0" />
                                            <t
                                                t-set="current_subtotal_non_vat"
                                                t-value="0"
                                            />
                                            <t
                                                t-set="current_subtotal_vat"
                                                t-value="0"
                                            />
                                            <t t-set="number" t-value="0" />
                                            <t t-set="current_section" t-value="line" />
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name" />
                                            </td>
                                        </t>
                                    </tr>
                                    <t
                                        t-if="current_section and (line_last or doc.invoice_line_ids[line_index+1].display_type == 'line_section')"
                                    >
                                        <tr>
                                            <td class="text-right" colspan="2">
                                                <strong>Sub Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <t t-if="current_subtotal_non_vat">
                                                    <strong
                                                        t-esc="'{0:,.2f}'.format(current_subtotal_non_vat)"
                                                    />
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <t t-if="current_subtotal_vat">
                                                    <strong
                                                        t-esc="'{0:,.2f}'.format(current_subtotal_vat)"
                                                    />
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <t t-if="current_subtotal">
                                                    <strong
                                                        t-esc="'{0:,.2f}'.format(current_subtotal)"
                                                    />
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <td class="text-right" colspan="2">
                                        <strong>Sub Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="subtotal_non_vat">
                                            <strong
                                                t-esc="'{:,.2f}'.format(subtotal_non_vat)"
                                            />
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="subtotal_vat">
                                            <strong
                                                t-esc="'{:,.2f}'.format(subtotal_vat)"
                                            />
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="subtotal">
                                            <strong
                                                t-esc="'{:,.2f}'.format(subtotal)"
                                            />
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-right" colspan="2">
                                        <strong>VAT 7%</strong>
                                    </td>
                                    <td class="text-right" />
                                    <td class="text-right">
                                        <t t-if="doc.amount_tax">
                                            <strong
                                                t-esc="'{:,.2f}'.format(doc.amount_tax)"
                                            />
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="doc.amount_tax">
                                            <strong
                                                t-esc="'{:,.2f}'.format(doc.amount_tax)"
                                            />
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-right" colspan="2">
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="subtotal_non_vat">
                                            <strong
                                                t-esc="'{:,.2f}'.format(subtotal_non_vat)"
                                            />
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="subtotal_vat">
                                            <strong
                                                t-esc="'{:,.2f}'.format(subtotal_vat + doc.amount_tax)"
                                            />
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="doc.amount_total">
                                            <strong
                                                t-esc="'{:,.2f}'.format(doc.amount_total)"
                                            />
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-right" colspan="2">
                                        <strong>WHT</strong>
                                    </td>
                                    <td class="text-right" />
                                    <td class="text-right" />
                                    <td class="text-right">
                                        <t
                                            t-set="amount_wt"
                                            t-value="sum(doc.invoice_line_ids.filtered('wt_tax_id').mapped(lambda l: l.wt_tax_id.amount / 100 * (l.quantity * l.price_unit)))"
                                        />
                                        <t t-if="amount_wt">
                                            (<strong
                                                t-esc="'{:,.2f}'.format(amount_wt)"
                                            />)
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-right" colspan="2">
                                        <strong>Net Amount</strong>
                                    </td>
                                    <td class="text-right" />
                                    <td class="text-right" />
                                    <td class="text-right">
                                        <strong
                                            t-esc="'{:,.2f}'.format(doc.amount_total - amount_wt)"
                                        />
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-right" colspan="5">
                                        <strong
                                            t-esc="'(%s)' % doc.currency_id.amount_to_text(doc.amount_total - amount_wt)"
                                        />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div style="page-break-inside: avoid;margin-top: 70px;">
                <div class="row">
                    <!-- Payment Detail -->
                    <div class="col-6">
                        <div class="row">
                            <div class="col-12 title">
                                <strong>PAYMENT DETAIL:</strong>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                Bank Name:
                            </div>
                            <div class="col-7">
                                <span t-field="company.company_bank_id.bank_id.name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                Account Name:
                            </div>
                            <div class="col-7">
                                <span
                                    t-field="company.company_bank_id.partner_id.name"
                                />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                Account Number:
                            </div>
                            <div class="col-7">
                                <span t-field="company.company_bank_id.acc_number" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                Swift Code:
                            </div>
                            <div class="col-7">
                                <span t-field="company.company_bank_id.bank_id.bic" />
                            </div>
                        </div>
                    </div>
                    <div class="col-6 text-center">
                        For and on behalf of<br />
                        <span t-field="company.name" />
                        <br /><br />
                        _____________________________________________<br />
                        Authorized Signature
                    </div>
                </div>
            </div>
        </div>
        <div class="footer faf_invoice">
            <div class="row">
                <div class="col-6">
                    <span t-field="company.name" /><br />
                    <span t-field="company.partner_id.street" />
                    <span t-field="company.partner_id.street2" />
                    <span t-field="company.partner_id.city" />
                    <span t-field="company.partner_id.state_id.name" />
                    <span t-field="company.partner_id.zip" />
                    <span t-field="company.partner_id.country_id.name" />
                </div>
                <div class="col-6 text-right">
                    Tel: <span t-field="company.partner_id.phone" /><br />
                    Email: <span t-field="company.partner_id.email" />
                </div>
            </div>
        </div>
    </template>

    <template id="report_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t
                    t-call="faf_forms.report_invoice_document"
                    t-lang="doc.partner_id.lang"
                />
            </t>
        </t>
    </template>
</odoo>
